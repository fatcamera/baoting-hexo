<header>
    <div class="logo"><a href="<%- config.root %>"><%- config.title %></a></div>
    <div id="menu_icon"><span class="fa fa-bars fa-lg"></span></div>
    <nav>
        <ul>
        <% for (var i in theme.menu){ -%>
            <li><a href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
        <% } -%>
        </ul>
    </nav>
    <div class="footer clearfix">
        <ul class="social clearfix">
        <% if (theme.weixin_url) { -%>
            <li>
                <a href="<%- theme.weixin_url %>" target="_blank" data-title="微信">
                    <span class="fa-stack">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-weixin fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </li>
        <% } -%>
        <% if (theme.weibo_url) { -%>
            <li>
                <a href="<%- theme.weibo_url %>" target="_blank" data-title="微博">
                    <span class="fa-stack">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-weibo fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </li>
        <% } -%>
        <% if (theme.linkedin_url) { -%>
            <li>
                <a href="<%- theme.linkedin_url %>" target="_blank" data-title="领英">
                    <span class="fa-stack">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-linkedin fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </li>
        <% } -%>
        <% if (theme.rss_url) { -%>
            <li>
                <a href="<%- theme.rss_url %>" target="_blank" data-title="订阅">
                    <span class="fa-stack">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-rss fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </li>
        <% } -%>
        </ul>
        <div class="rights">
            <p><span class="fa fa-copyright fa-fw"></span> 包婷 2008 - 2017</p>
            <p><span class="fa fa-shield fa-fw"></span> 京ICP备15026524号</p>
        </div>
    </div >
</header>